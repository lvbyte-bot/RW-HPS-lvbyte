<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <style name="SpinnerTheme" parent="android:Theme.Holo">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    
    <style name="SpinnerItem">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    
    
    <style name="MenuButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custombutton</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="LevelButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    
    
    
    <style name="SettingsHeader" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#42E347</item>
        <item name="android:background">#626363</item>
        
        <!-- #757678 -->
        
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        
             
        <item name="android:paddingLeft">55dip</item>
        <item name="android:paddingRight">55dip</item>
        
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        
        
        <item name="android:minWidth">250dip</item>
    </style>
    
    
    <style name="SettingsSectionGroup" >
        
        <item name="android:padding">10dip</item>
        
        
    </style>
    
     <style name="SettingsMainButtons" >
        
        <item name="android:padding">10dip</item>
        
        
    </style>
    
</resources>
